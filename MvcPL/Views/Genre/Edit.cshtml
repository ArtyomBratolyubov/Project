@{
    ViewBag.Title = "Edit Genre";
}

@model MvcPL.Models.GenreEditViewModel

@section main{
    <div class="col-md-7 col-md-offset-2">
        <h3>Edit genre</h3>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group ">
                @Html.LabelFor(m => m.Genre.Name, null, new { @class = "" })

                @Html.TextBoxFor(m => m.Genre.Name, null, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Genre.Description, null, new { @class = "" })
                @Html.TextAreaFor(m => m.Genre.Description, new { @class = "form-control", @type = "text", @rows = "10" })
            </div>
            <div class="form-group ">
                <table style="width:100%">
                    <tr>
                        <td>
                            @Html.ActionLink("Cancel", "Index", "Genres", null, new { @class = "btn btn-default btn-block form-btn" })
                        </td>
                        <td>
                            <input type="submit" class="btn btn-success btn-block form-btn" value="Edit" />
                        </td>
                    </tr>
                </table>
            </div>

            @Html.ValidationSummary(false)
        }
    </div>
}
