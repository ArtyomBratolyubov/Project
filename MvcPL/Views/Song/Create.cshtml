@{
    ViewBag.Title = "Add Track";
}

@model MvcPL.Models.SongEditViewModel

@section main{
    <div class="col-md-7 col-md-offset-2">
        <h3>Track</h3>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group ">
                @Html.LabelFor(m => m.Song.Name, null, new { @class = "" })
                @Html.TextBoxFor(m => m.Song.Name, null, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Song.AlbumId, null, new { @class = "text" })
                @Html.DropDownListFor(m => m.Song.AlbumId, new SelectList(Model.Albums, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Song.Description, null, new { @class = "" })
                @Html.TextAreaFor(m => m.Song.Description, new { @class = "form-control", @type = "text", @rows = "10" })
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Прикрепить файл</label>
                <input type="file" name="File" class="btn btn-default btn-block" accept=".mp3">
            </div>
            <div class="form-group ">
                <table style="width:100%">
                    <tr>
                        <td>
                            @Html.ActionLink("Cancel", "Index", "Songs", null, new { @class = "btn btn-default btn-block form-btn" })
                        </td>
                        <td>
                            <input type="submit" class="btn btn-success btn-block form-btn" value="Add" />
                        </td>
                    </tr>
                </table>
            </div>

            @Html.ValidationSummary(false)
        }
    </div>



}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}