@model MvcPL.Models.SongModel

    Rating:
    @for (int i = 1; i <= 5; i++)
    {
        if (i <= Model.Rating)
        {
            @Ajax.ActionLink(" ", "Rate", new { rate = i, songId = Model.Id },
                                     new AjaxOptions
                                 {
                                     UpdateTargetId = "Rating",
                                 },
                                 new { @class = "glyphicon glyphicon-star" })
        }
        else
        {
            @Ajax.ActionLink(" ", "Rate", new { rate = i, songId = Model.Id },
                                     new AjaxOptions
                                 {
                                     UpdateTargetId = "Rating",
                                 },
                                 new { @class = "glyphicon glyphicon-star-empty" })
        }
    }
 (@Model.Rating.ToString("0.0")/5)