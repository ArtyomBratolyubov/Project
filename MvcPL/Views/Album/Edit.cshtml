@{
    ViewBag.Title = "Edit Album";
}

@model MvcPL.Models.AlbumEditViewModel

@section main{
    <div class="col-md-7 col-md-offset-2">
        <h3>Album</h3>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group ">
                <img src="~/File/GetFile/0@{@Model.Album.ImageId}" class="img" />
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Album.Name, null, new { @class = "" })
                @Html.TextBoxFor(m => m.Album.Name, null, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Album.DateOut, null, new { @class = "" })
                @Html.TextBoxFor(m => m.Album.DateOut, string.Format("{0:yyyy-MM-dd}",
                Model.Album.DateOut.HasValue ? Model.Album.DateOut : null), new { @class = "form-control", @type = "date" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Album.SingerId, null, new { @class = "text" })
                @Html.DropDownListFor(m => m.Album.SingerId, new SelectList(Model.Singers, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Album.GenreId, null, new { @class = "text" })
                @Html.DropDownListFor(m => m.Album.GenreId, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Album.Description, null, new { @class = "" })
                @Html.TextAreaFor(m => m.Album.Description, new { @class = "form-control", @type = "text", @rows = "10" })
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Image</label>
                <input type="file" name="File" class="btn btn-default btn-block" accept=".jpg, .png">
            </div>
            <div class="form-group ">
                <table style="width:100%">
                    <tr>
                        <td>
                            @Html.ActionLink("Cancel", "Index", "Albums", null, new { @class = "btn btn-default btn-block form-btn" })
                        </td>
                        <td>
                            <input type="submit" class="btn btn-success btn-block form-btn" value="Edit" />
                        </td>
                    </tr>
                </table>
            </div>

            @Html.ValidationSummary(false)
        }
    </div>


}
