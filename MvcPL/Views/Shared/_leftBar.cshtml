
<div class="panel panel-default panel-black">
    <div class="panel-heading">Main menu</div>
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "list-group-item list-group-item-action" })
    @Html.ActionLink("Singers", "Index", "Singers", null, new { @class = "list-group-item list-group-item-action" })
    @Html.ActionLink("Albums", "Index", "Albums", null, new { @class = "list-group-item list-group-item-action" })
    @Html.ActionLink("Tracks", "Index", "Songs", null, new { @class = "list-group-item list-group-item-action" })
    @Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "list-group-item list-group-item-action" })
    
    @if (Request.IsAuthenticated)
    {
        if (Array.Exists((string[])ViewBag.Roles, element => element == "Admin"))
        {
            <hr />
            @Html.ActionLink("Users", "Index", "Users", null, new { @class = "list-group-item list-group-item-action" })
        }
    }
</div>