@model MvcPL.Models.RegistrateViewModel

@{
    ViewBag.Title = "Sign In";
}


@section main{

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="col-md-7 col-md-offset-2">

            <div class="form-group input-group ">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(m => m.UserData.UserName, null, new { @class = "form-control", @type = "text", @placeholder = "Login" })
            </div>
            <hr />
            <div class=""></div>
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(m => m.UserData.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
            </div>
            <div class="form-group input-group ">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(m => m.UserData.ConfirmPassword, new { @class = "form-control", @type = "password", @placeholder = "Repeat password" })
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" class="btn btn-success btn-block" value="Sign In" />
            </div>

            @Html.ValidationSummary(false)
        </div>



    }

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}