@model MvcPL.Models.AlbumsViewModel

@{
    ViewBag.Title = "Albums";
    ViewBag.UserID = Model.UserId;
    ViewBag.Roles = Model.Roles;
}


@section main{
    <div class="panel ">

        <h3>
            Albums
            <img src="~/Content/images/loader.gif" class="load-img" id="loadingIndicator">
            @Html.ActionLink("Add", "Create", "Album", null, new { @class = "btn btn-danger pull-right" })
        </h3>

    </div>
    <div class="panel-group" id="accordion">
        @Html.Partial("Page", Model.Albums)
    </div>

    @Html.Partial("_paginator")

}


