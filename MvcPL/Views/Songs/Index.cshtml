@model MvcPL.Models.SongsViewModel

@{
    ViewBag.Title = "Tracks";
    ViewBag.UserID = Model.UserId;
    ViewBag.Roles = Model.Roles;
}


@section main{
    <div class="panel ">

        <h3>
            Tracks
            <img src="~/Content/images/loader.gif" class="load-img" id="loadingIndicator">
            @Html.ActionLink("Add", "Create", "Song", null, new { @class = "btn btn-danger pull-right" })
        </h3>

    </div>
    <div class="panel-group" id="accordion">
        @Html.Partial("Page", Model.Songs)
    </div>

    @Html.Partial("_paginator")

}

@section scripts
{
    @*Ненавязивый JavaScript для выполнения запроса на сервер без полного обновления страницы*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
